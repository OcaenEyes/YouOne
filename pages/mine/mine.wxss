/* pages/mine/mine.wxss */
.card{
  width: 88%;
  /* height: 500rpx; */
  border-radius: 20rpx;
  box-shadow: 10rpx 20rpx 20rpx 5rpx #dbdbdb;
  margin: 40rpx 6%;
  border: 1rpx solid #f4f4f4;
  padding-bottom: 20rpx;
}
.head{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx 4%;
}
.head-image{
  width: 66rpx;
  height: 66rpx;
  border-radius: 50%;
}
.author{
  font-size: 30rpx;
  color: #333;
  margin-left: 20rpx;
}
.video-view{
  width: 100%;
  height: 300rpx;
}
.text-content{
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-left:4%;
}
.text-authors{
  font-size: 24rpx;
  color: #999;
  margin-left:4%;
}